template
  div.row
    template(repeat.for="product of products")
      div.col-sm-6.col-md-4.col-lg-3
        div.card
          a(href="#/products/${product.id}")
            img.card-img-top.img-fluid(src="assets/images/${product.image}")
          div.card-block
            h4.card-title
              a(href="#/products/${product.id}") ${product.title}
            div
              //rating(rating.bind="product.rating", rate.trigger="rate(product, $event.detail.rateValue)")
              rating(rating.bind="product.rating", readonly.bind="true")
            div.card-text ${product.price | sumFormat}
          div.card-footer
            a.btn.btn-primary(href="#/products/${product.id}") ${'products.details' | t}

