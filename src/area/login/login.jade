template
  form.m-x-auto(style="max-width: 500px")
    h1.text-xs-center ${'login.title' | t}
    div.form-group.row
      div.col-sm-4
        label.form-control-label  ${'models.user.userName'| t}
      div.col-sm-8
        input.form-control(type="text", value.bind="userName")
    div.form-group.row
      div.col-sm-4
        label.form-control-label ${'models.user.password'| t}
      div.col-sm-8
        input.form-control(type="password", value.bind="password")
    div.form-group.row
      div.col-sm-12.text-sm-right
        base-button(on-click.call="login()", type="btn-success", title="login.signin", name="login.signin")
